@model Section

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Раздел @Model.Name</title>
</head>
<body>
<h1>Разнообразный ассортимент!</h1>
<br />
@for (int i = 0; i < Model.Goods.Count; i++)
{
    <h2>Товар № @(i + 1)</h2>
    <p>@Model.Goods[i].Name</p>
    <p>@Model.Goods[i].Article</p>
}
</body>
</html>