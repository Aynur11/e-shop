@model IEnumerable<OnlineStore.Models.Product>

<div id="searchresults" class="modules-container">
    @if (Model.Count() > 0)
    {
        <h3>Все найденные товары категории @Model.First().Section.Name</h3>
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    Имя товара: @item.Name <br />
                    ID товара: @item.Id <br />
                    Артикул: @item.Article <br />
                    Фото товара:
                    @if (item.Image != null)
                    {
                        <img class="section-img" src="data:image/png;base64,@(Convert.ToBase64String(item.Image.Data))" />
                    } <br /><br />
                </li>
            }
        </ul>
    }
</div>