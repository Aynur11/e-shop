@using System.Diagnostics
@using System.IO
@using OnlineStore.Controllers
@model List<Section>
<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Модули</title>
</head>

<body class="wave">
    <div class="modules-container">
        <div class="modules-content">
            <h1 class="modules-h1">Интернет магазин</h1>

            <div class="section-parent">
                @for (int i = 1; i < Model.Count + 1; i++)
                {
                <div class="section-child">
                    @if (Model[i - 1].Image != null)
                    {
                        <img class="section-img" src="data:image/png;base64,@(Convert.ToBase64String(Model[i - 1].Image.Data))" />
                    }
                    <p class="card-text-new">
                        <a asp-action=Sections asp-route-id=@Model[i - 1].Id asp-controller="Sections">@Model[i - 1].Name</a>
                    </p>
                </div>
                }
            </div>
            <button class="button-show-more"><span class="button-show-more-text"> Показать еще</span></button>
        </div>
    </div>
</body>

</html>